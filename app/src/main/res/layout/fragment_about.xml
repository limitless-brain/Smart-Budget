<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--About app-->
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutAppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/aboutAppImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/aboutAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/aboutAppImage"
                    android:layout_toEndOf="@id/aboutAppImage"
                    android:text="@string/app_name"
                    android:textColor="@color/black_de"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/aboutAppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutAppName"
                    android:layout_toEndOf="@id/aboutAppImage"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/app_version_name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aboutAppCopyrights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutAppVersion"
                    android:layout_toEndOf="@id/aboutAppImage"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/about_copyright" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <!--About Anas-->
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutAnasCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/aboutAnasImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/circular_stroke"
                    android:elevation="8dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/aboutAnasName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/aboutAnasImage"
                    android:layout_toEndOf="@id/aboutAnasImage"
                    android:text="@string/about_anas_name"
                    android:textColor="@color/black_de"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/aboutAnasText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutAnasName"
                    android:layout_toEndOf="@id/aboutAnasImage"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/about_anas_text1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aboutAnasText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutAnasText1"
                    android:layout_toEndOf="@id/aboutAnasImage"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/about_anas_text2" />

                <LinearLayout
                    android:id="@+id/socialAnasLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutAnasImage"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aboutAnasLinkedIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_linkedin" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/socialAnasLayout" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <!--About Me-->
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutMeCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/aboutMeImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:background="@drawable/circular_stroke"
                    android:elevation="8dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/aboutMeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/aboutMeImage"
                    android:layout_toEndOf="@id/aboutMeImage"
                    android:text="@string/about_me_name"
                    android:textColor="@color/black_de"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/aboutMeText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutMeName"
                    android:layout_toEndOf="@id/aboutMeImage"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/about_me_text1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aboutMeText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutMeText1"
                    android:layout_toEndOf="@id/aboutMeImage"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="@string/about_me_text2" />

                <LinearLayout
                    android:id="@+id/socialLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aboutMeImage"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aboutMeLinkedIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_linkedin" />

                    <ImageView
                        android:id="@+id/aboutMeGithub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_github" />

                    <ImageView
                        android:id="@+id/aboutMeInstagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_instagram" />

                    <ImageView
                        android:id="@+id/aboutMeYoutube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_youtube" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/socialLayout" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>